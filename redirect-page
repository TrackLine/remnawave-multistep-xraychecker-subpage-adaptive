        // Global variables
        let currentLanguage = 'en';
        let currentTheme = 'dark';
        let timerValue = 10;
        let timerId = null;
        let redirectTo = "";
        let appInfo = null;

        // Initialize
        document.addEventListener("DOMContentLoaded", function () {
            initialize();
        });

        function initialize() {
            loadSettings();
            
            // Get redirect URL from URL parameters - exactly like original
            const currentURL = window.location.href;
            const urlParts = currentURL.split('redirect_to=');
            redirectTo = urlParts.length > 1 ? decodeURIComponent(urlParts[1].split('&')[0]) : '';
            
            appInfo = appSchemes.find(a => redirectTo.startsWith(a.scheme));

            updateUI();
            
            // Only start timer if we have a valid redirect URL
            if (redirectTo) {
                startTimer();
            }
            
            // Event listeners
            window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
                if (currentTheme === 'auto') applyTheme('auto');
            });
            
            document.addEventListener('click', e => { 
                if (e.target.classList.contains('modal')) closeModal('settingsModal'); 
            });
            
            document.addEventListener('keydown', e => { 
                if (e.key === 'Escape') closeModal('settingsModal'); 
            });
        }

        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 15 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        function addVisualEffects() {
            // Add hover effects to main card
            const mainCard = document.getElementById('mainCard');
            mainCard.addEventListener('mousemove', (e) => {
                const rect = mainCard.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                const centerX = rect.width / 2;
                const centerY = rect.height / 2;
                
                const rotateX = (y - centerY) / 10;
                const rotateY = (centerX - x) / 10;
                
                mainCard.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
            });

            mainCard.addEventListener('mouseleave', () => {
                mainCard.style.transform = 'perspective(1000px) rotateX(0deg) rotateY(0deg)';
            });
        }

        function updateUI() {
            updateAllTexts();
            
            const appIconEl = document.getElementById("appIcon");
            const appNameEl = document.getElementById("appName");
            const statusTextEl = document.getElementById("statusText");
            const timerContainer = document.getElementById("timerContainer");
            const actionButton = document.getElementById("actionButton");
            const mainCard = document.getElementById("mainCard");
            const statusRing = document.getElementById("statusRing");

            if (!redirectTo) {
                // Error state - exactly like original
                mainCard.classList.add('error-state');
                statusRing.style.display = 'none';
                appIconEl.textContent = "!";
                appNameEl.textContent = t("error_title");
                statusTextEl.innerHTML = `<span class="error-text">${t("error_description")}</span>`;
                timerContainer.style.display = "none";
                actionButton.style.display = "none";
            } else {
                // Success state - exactly like original
                const appId = appInfo ? appInfo.id : "default";
                const appName = appInfo ? appInfo.name[currentLanguage] : "VPN App";

                appIconEl.textContent = appIcons[appId] || appIcons["default"];
                appNameEl.textContent = appName;
                statusTextEl.textContent = `${t("connecting_to")} ${appName}...`;
                
                timerContainer.style.display = "block";
                actionButton.style.display = "flex";
                actionButton.href = redirectTo;
            }

            // Update theme button states
            updateThemeButtons();
            updateLanguageButtons();
        }

        function startTimer() {
            // Don't start timer if no redirect URL
            if (!redirectTo || timerId) return;

            const timerEl = document.getElementById("timer");
            const progressEl = document.getElementById("progressFill");
            const totalTime = 10;
            
            timerEl.textContent = timerValue;

            timerId = setInterval(() => {
                timerValue--;
                timerEl.textContent = timerValue;
                
                // Update progress bar - from 100% to 0%
                const progress = ((totalTime - timerValue) / totalTime) * 100;
                progressEl.style.width = `${100 - progress}%`;
                
                if (timerValue <= 0) {
                    clearInterval(timerId);
                    // Redirect to the URL
                    window.location.href = redirectTo;
                }
            }, 1000);
        }

        function showConnectionSuccess() {
            const statusTextEl = document.getElementById("statusText");
            const timerContainer = document.getElementById("timerContainer");
            const actionButton = document.getElementById("actionButton");
            
            statusTextEl.innerHTML = '<span style="color: #43e97b; font-weight: 600;">✓ Connection established successfully!</span>';
            timerContainer.style.display = "none";
            actionButton.innerHTML = `
                <svg class="button-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Open App</span>
            `;
        }

        // Settings functions
        function loadSettings() {
            const savedTheme = localStorage.getItem('theme') || 'dark';
            const savedLang = localStorage.getItem('lang') || getBrowserLanguage();
            
            currentTheme = savedTheme;
            currentLanguage = savedLang;
            
            applyTheme(savedTheme);
            updateAllTexts();
        }

        function getBrowserLanguage() {
            const lang = navigator.language || navigator.userLanguage;
            if (lang.startsWith('ru')) return 'ru';
            if (lang.startsWith('fa')) return 'fa';
            return 'en';
        }

        function setTheme(theme) {
            currentTheme = theme;
            localStorage.setItem('theme', theme);
            applyTheme(theme);
            updateThemeButtons();
        }

        function applyTheme(theme) {
            const html = document.documentElement;
            const themeColorMeta = document.getElementById('themeColor');
            
            let isDark;
            if (theme === 'auto') {
                isDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            } else {
                isDark = theme === 'dark';
            }
            
            html.classList.toggle('light-theme', !isDark);
            themeColorMeta.setAttribute('content', isDark ? '#667eea' : '#667eea');
        }

        function setLanguage(lang) {
            currentLanguage = lang;
            localStorage.setItem('lang', lang);
            document.documentElement.lang = lang;
            updateUI();
            updateLanguageButtons();
        }

        function updateThemeButtons() {
            document.querySelectorAll('.setting-buttons button').forEach(btn => {
                btn.classList.remove('active');
            });
            
            const themeButtons = document.querySelectorAll('.setting-group:first-child .setting-btn');
            themeButtons.forEach(btn => {
                if ((currentTheme === 'light' && btn.dataset.key === 'light') ||
                    (currentTheme === 'dark' && btn.dataset.key === 'dark') ||
                    (currentTheme === 'auto' && btn.dataset.key === 'auto')) {
                    btn.classList.add('active');
                }
            });
        }

        function updateLanguageButtons() {
            const langButtons = document.querySelectorAll('.setting-group:last-child .setting-btn');
            langButtons.forEach(btn => {
                btn.classList.remove('active');
                if ((currentLanguage === 'en' && btn.textContent === 'English') ||
                    (currentLanguage === 'ru' && btn.textContent === 'Русский') ||
                    (currentLanguage === 'fa' && btn.textContent === 'فارسی')) {
                    btn.classList.add('active');
                }
            });
        }

        function t(key) {
            return translations[currentLanguage]?.[key] || translations.en[key] || key;
        }

        function updateAllTexts() {
            document.querySelectorAll('[data-key]').forEach(el => {
                const key = el.getAttribute('data-key');
                el.textContent = t(key);
            });
        }

        // Modal functions
        function openModal(id) {
            const modal = document.getElementById(id);
            if (modal) {
                modal.classList.add('active');
                document.body.style.overflow = 'hidden';
            }
        }

        function closeModal(id) {
            const modal = document.getElementById(id);
            if (modal) {
                modal.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        }

        // Simplified: removed complex interactive effects
        
        // Performance optimization: Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animationPlayState = 'running';
                } else {
                    entry.target.style.animationPlayState = 'paused';
                }
            });
        }, observerOptions);

        // Observe animated elements
        setTimeout(() => {
            document.querySelectorAll('.app-icon').forEach(el => {
                observer.observe(el);
            });
        }, 1000);
    </script>

        <!-- Main Card -->
        <div class="main-card" id="mainCard">
            <!-- App Header -->
            <div class="app-header">
                <div class="app-icon-container">
                    <div class="app-icon" id="appIcon">V</div>
                    <div class="status-ring" id="statusRing"></div>
                </div>
                <h1 class="app-name" id="appName">VPN Client</h1>
                <div class="app-version">v2.1.0</div>
            </div>

            <!-- Status Section -->
            <div class="status-section">
                <p class="status-text" id="statusText" data-key="connecting">Establishing secure connection...</p>
                
                <!-- Timer Container -->
                <div class="timer-container" id="timerContainer">
                    <div class="timer-content">
                        <div class="timer-label" data-key="redirect_timer">Redirecting automatically in</div>
                        <div class="timer-display">
                            <span class="timer-number" id="timer">10</span>
                            <span class="timer-unit" data-key="seconds">seconds</span>
                        </div>
                        <div class="progress-container">
                            <div class="progress-track">
                                <div class="progress-fill" id="progressFill"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <p class="status-text" data-key="manual_action">If nothing happens, click the button below.</p>
            </div>

            <!-- Action Button -->
            <a class="action-button" id="actionButton" href="#" target="_blank" rel="noopener">
                <svg class="button-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 9l3 3-3 3m-1-9l-3 3 3 3"></path>
                </svg>
                <span data-key="connect_now">Connect Now</span>
            </a>
        </div>
    </div>

    <!-- Settings Modal -->
    <div class="modal" id="settingsModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" data-key="settings">Settings</h3>
                <button class="modal-close" onclick="closeModal('settingsModal')">&times;</button>
            </div>
            <div class="modal-body">
                <div class="setting-group">
                    <div class="setting-label" data-key="theme">Theme</div>
                    <div class="setting-buttons">
                        <button class="setting-btn" onclick="setTheme('light')" data-key="light">Light</button>
                        <button class="setting-btn active" onclick="setTheme('dark')" data-key="dark">Dark</button>
                        <button class="setting-btn" onclick="setTheme('auto')" data-key="auto">Auto</button>
                    </div>
                </div>
                <div class="setting-group">
                    <div class="setting-label" data-key="language">Language</div>
                    <div class="setting-buttons">
                        <button class="setting-btn active" onclick="setLanguage('en')">English</button>
                        <button class="setting-btn" onclick="setLanguage('ru')">Русский</button>
                        <button class="setting-btn" onclick="setLanguage('fa')">فارسی</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
